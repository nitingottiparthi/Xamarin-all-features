<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstPcl.Views.DailPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid Padding="10,20,0,5" VerticalOptions="FillAndExpand">

            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Entry x:Name="entryName" BackgroundColor="Yellow" TextColor="Black" FontSize="16" WidthRequest="120" Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"/>
                <Button x:Name="btnSubmit" BackgroundColor="Blue" TextColor="White" Text="Submit" Clicked="ButtonClicked" Grid.Row="2"/>
                
                
        </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>