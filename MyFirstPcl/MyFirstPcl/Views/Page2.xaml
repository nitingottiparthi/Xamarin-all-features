<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstPcl.Views.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin Forms!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Calculate" NumberOfTapsRequired="2"/>
                </Label.GestureRecognizers>
            </Label>
            <Entry x:Name="firstentry" BackgroundColor="Blue" TextColor="White" FontSize="16" WidthRequest="120" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"  Keyboard="Numeric"/>
            <Button x:Name="firstsubmit" BackgroundColor="Brown" TextColor="White" Text="Submit" Clicked="ButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>