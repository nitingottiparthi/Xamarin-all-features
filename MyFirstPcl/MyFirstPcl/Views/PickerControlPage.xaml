<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstPcl.Views.PickerControlPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="pkrMyFirstPicker" BackgroundColor="Yellow" TextColor="Blue" WidthRequest="200" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Title="Select Name" SelectedIndexChanged="NameChanged"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>